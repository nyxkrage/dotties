# Colors by default
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# git bare config repo
alias config='/usr/bin/git --git-dir=$XDG_DATA_HOME/config/ --work-tree=$HOME'
